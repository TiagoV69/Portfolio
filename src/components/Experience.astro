---
import ExperienceItem from './ExperienceItem.astro';

const experienceData = [
  {
    title: "Desarrollador de Automatización de Procesos",
    company: "Servicios Nutresa",
    date: "Agosto 2024 - Febrero 2025",
    description: "Se diseñaron e implementaron soluciones tecnológicas para automatizar procesos internos y mejorar la eficiencia operativa. Las herramientas utilizadas incluyeron Google Apps Script, AppSheet y UiPath Studio. Se realizó análisis de necesidades, desarrollo de scripts personalizados y coordinación con equipos multidisciplinarios y proveedores externos."
  }
];
---
<section class="py-32 px-4 scroll-animate">
  <div class="max-w-4xl mx-auto">
    <h2 class="text-4xl font-bold text-slate-900 mb-16 text-center">Experiencia Profesional</h2>
    
    <div class="[&>*:last-child]:pb-0">
      {experienceData.map(exp => (
        <ExperienceItem 
          title={exp.title}
          company={exp.company}
          date={exp.date}
          description={exp.description}
        />
      ))}
    </div>
  </div>
</section>