---
const { title, company, date, description } = Astro.props;
---
<div class="experience-item">
  <h3>{title} <span class="company">@ {company}</span></h3>
  <p class="date">{date}</p>
  <p class="description">{description}</p>
</div>

<style>
  .experience-item {
    border-left: 2px solid #0077b5;
    padding-left: 1.5rem;
    margin-bottom: 2rem;
  }
  .company {
    color: #0077b5;
  }
  .date {
    font-style: italic;
    color: #666;
    margin-bottom: 0.5rem;
  }
  .description {
    line-height: 1.6;
  }
</style>