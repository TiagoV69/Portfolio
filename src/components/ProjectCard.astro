---
interface Props {
  title: string;
  description: string;
  tech: string[];
  link: string;
  slug: string;
}

const { title, description, tech, link, slug } = Astro.props;
---
<article class="bg-white border border-slate-200 rounded-xl shadow-md p-6 flex flex-col h-full">
  <h3 class="text-2xl font-bold text-slate-800 mb-2">{title}</h3>
  <p class="text-slate-600 mb-4 flex-grow">{description}</p>
  
  <div class="flex flex-wrap gap-2 mb-6">
    {tech.map((tag) => (
      <span class="bg-sky-100 text-sky-800 text-xs font-semibold px-2.5 py-0.5 rounded-full">
        {tag}
      </span>
    ))}
  </div>

  <div class="flex justify-between items-center mt-auto">
    <a href={`/proyectos/${slug}`} class="bg-sky-700 text-white font-semibold px-5 py-2 rounded-lg hover:bg-sky-600 transition text-sm">
      Ver detalles
    </a>
    <a href={link} target="_blank" rel="noopener noreferrer" class="border border-slate-400 text-slate-600 font-semibold px-5 py-2 rounded-lg hover:bg-slate-100 transition text-sm">
      CÃ³digo
    </a>
  </div>
</article>